<aura:component >
    <aura:attribute name="value" type="Integer" default="40" />
    <aura:handler name="click" value="{!v.value}" action="{!c.showDetails}" />
    <div class="slds-progress-ring">
        <div id="progressContainer" class="slds-progress-ring__progress" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="{!v.value}">

        </div>
        <div class="slds-progress-ring__content"> 40
        </div>
    </div>
</aura:component>